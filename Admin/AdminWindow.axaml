<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="LibraryManager.AdminWindow"
        Title="Администратор LibraryManager v2.0"
        Width="550" Height="300">

    <StackPanel VerticalAlignment="Center"> 
        <TextBlock Text="Создать запись" HorizontalAlignment="Center"/>
        <Button Content="Автор" Width="200" Margin="50,20,0,0" Click="Button_Click" HorizontalAlignment="Left" HorizontalContentAlignment="Center"/>
        <Button Content="Издательство" Width="200" Click="Button_Click" Margin="0,-30,50,0" HorizontalAlignment="Right" HorizontalContentAlignment="Center"/>
        <Button Content="Книга" Width="200" Margin="50,20,0,0" Click="Button_Click" HorizontalAlignment="Left" HorizontalContentAlignment="Center"/>
        <Button Content="Библиотекарь" Width="200" Margin="0,-30,50,0" Click="Button_Click" HorizontalAlignment="Right" HorizontalContentAlignment="Center"/>
        <TextBlock Text="Просмотр записей" Margin="20" HorizontalAlignment="Center"/>
        <Button Content="Все записи" Width="200" Click="Button_Click" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
    </StackPanel>
</Window>