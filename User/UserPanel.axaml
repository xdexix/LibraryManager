<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="LibraryManager.UserPanel"
        Title="Пользователь LibraryManager v1.0"
        Width="400" Height="150">

    <StackPanel VerticalAlignment="Center"> 
        <TextBlock Text="Введите свой идентификатор" HorizontalAlignment="Center"/>
        <TextBox x:Name="IDBox" HorizontalAlignment="Center" Width="200" Margin="0,20,0,0"/>
        <Button Content="Продолжить" Width="200" Click="UserID_Click" Margin="0,20,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>